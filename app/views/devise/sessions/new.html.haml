.container
  .form
    %h2.form_title Sign in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form_field
        = f.label :email, class: 'form_label'
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form_text'
      .form_field
        = f.label :password, class: 'form_label'
        = f.password_field :password, autocomplete: "current-password", class: 'form_text'
      - if devise_mapping.rememberable?
        .from_remMe
          = f.check_box :remember_me
          = f.label :remember_me ,class: 'form_annotation'
      = render "devise/shared/links"
      = f.submit "Submit", class: 'form_btn'
