.container
  %h2
    Edit #{resource_name.to_s.humanize}
  .form
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form_item
        = f.label :user_name, class: 'form_label'
        = f.text_field :user_name, autofocus: true, autocomplete: "user_name", class: 'form_text'
      .form_item
        = f.label :email, class: 'form_label'
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form_text'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .form_item
        = f.label :avatar, class: 'form_label'
        = f.file_field :avatar
      .form_item
        = f.label :password, class: 'form_label'
        %i (leave blank if you don't want to change it)
        = f.password_field :password, autocomplete: "new-password", class: 'form_text'
        - if @minimum_password_length
          %br/
          %em
            = @minimum_password_length
            characters minimum
      .form_item
        = f.label :password_confirmation, class: 'form_label'
        = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form_text'
      .form_item
        = f.label :current_password, class: 'form_label'
        %i (we need your current password to confirm your changes)
        = f.password_field :current_password, autocomplete: "current-password", class: 'form_text'
      .actions
        = f.submit "Update", class: 'form_btn'
    %h3 Cancel my account
    %div
      Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete}
    = link_to "Back", :back
