.container
  %h2= @board.title
  .form
    = form_with model: @board, local: true do |f|
      .form_item
        = f.label :title, class: 'form_label'
        = f.text_field :title, class: 'form_text'

      .form_item
        = f.label :description, class: 'form_label'
        = f.text_area :description, class: 'form_textfield'

      .form_item
        = f.submit 'Submit', class: 'form_btn'