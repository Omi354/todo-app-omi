.container
  %h2 All Boards
  - @boards.each do |board|
    .board
      .board_content
        %p.board_title= board.title
        %p.board_desc= board.desc
        .board_author
          = image_tag('default-avatar.png')
          .board_authorDesc
            %p 作成者:
            %p=  User.find(board.user_id).user_name


      .board_actions
        .dropdown
          = image_tag('actions.svg', class: 'dropbtn dropbtn_board')
          .dropdown-content
            = link_to 'Edit', edit_board_path(board)
            = link_to 'Delete', board_path(board), method: :delete, data: { confirm: '削除してもよろしいですか?' }
  = link_to '+ Add New Board', new_board_path, class: 'newBoardLink'